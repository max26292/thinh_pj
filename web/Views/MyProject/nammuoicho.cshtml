@model web.Models.data_return_car

@{
    ViewBag.Title = "nammuoicho";
}


<div class="container" style="margin-top:50px;">
    <div class="row">


        @foreach (var i in Model.items.ToList())
        {


            <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="col-item">
                    <div class="post-img-content">
                        <img src="@i.img_path" class="img-responsive" />
                        <span class="post-title">
                            <b>
                                @Model.category_eachitem.name
                            </b><br>
                            @*<b>Clássico</b>*@
                        </span>
                        @*<span class="round-tag">-15%</span>*@
                    </div>
                    <div class="info">
                        <div class="row">
                            <div class="price col-md-6">
                                <h5> @i.name</h5>
                                <h5 class="price-text-color">19.99€</h5>
                            </div>
                            <div class="rating hidden-sm col-md-6">
                                <h5 class="price-text-color">14.99€</h5>
                            </div>
                        </div>
                        <div class="separator clear-left">
                            <p class="btn btn-add">
                                <i class="fa fa-shopping-cart"></i><a href="#" class="hidden-sm">Thuê</a>
                            </p>
                            <p class="btn btn-details">
                                <i class="fa fa-list"></i><a href="#" class="hidden-sm">Thông tin chi tiết</a>
                            </p>
                        </div>
                        <div class="clearfix">
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div><!-- container / end -->